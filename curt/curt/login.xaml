        <PasswordBox x:Name="password" HorizontalAlignment="Center" Height="24" Margin="311,225,281,176" VerticalAlignment="Center" Width="300"></PasswordBox>
        <Button x:Name="regin" Click="regin_Click" Content="Регистрация" HorizontalAlignment="Center" Margin="419,266,278,154" RenderTransformOrigin="0.081,-0.624" Width="103"></Button>
