    <Grid>
        <Label Content=" Введите логин:" HorizontalAlignment="Center" Margin="311,144,389,249" VerticalAlignment="Center"></Label>
        <TextBox x:Name="textBox_login" HorizontalAlignment="Center" Height="24" Width="300" Margin="311,170,281,225" VerticalAlignment="Center"></TextBox>
